{
  "devDependencies": {
    "@types/node": "^12.12.21",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.3",
    "jest": "^24.9.0",
    "lint-staged": "^4.0.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "build": "tsc && rsync -am --include '*/' --include='*.js' --exclude='*' server/src/ server/dist",
    "test": "npm run-script build && node_modules/.bin/jest --projects client server --runInBand",
    "test-watch": "node_modules/.bin/jest --projects client server --watch"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
